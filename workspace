#!/bin/bash

echo "ğŸ” Checking LaFinca Project Status..."

# 1. Verify critical files exist
echo "ğŸ“¦ Verifying project structure..."
required_files=("index.html" "style.css" "script.js" "README.md" ".nojekyll")
for file in "${required_files[@]}"; do
    if [ -f "$file" ]; then
        echo "âœ… $file found"
    else
        echo "âŒ $file missing"
    fi
done

# 2. Check scripts and video folders
if [ -d "scripts" ]; then
    echo "âœ… scripts/ folder exists"
else
    echo "âŒ scripts/ folder missing"
fi

if [ -d "video" ]; then
    echo "âœ… video/ folder exists"
else
    echo "âŒ video/ folder missing"
fi

# 3. Run basic HTML validation
echo "ğŸ”§ Validating index.html..."
if grep -q "<!DOCTYPE html>" index.html; then
    echo "âœ… HTML structure looks good"
else
    echo "âš ï¸ Missing DOCTYPE in HTML"
fi

# 4. Git sync status
echo "ğŸ”„ Checking Git sync..."
git status

# 5. Optional: local preview
